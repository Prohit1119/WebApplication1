
@model IEnumerable<MVCWithADO.Models.Student>

<h2 style="text-align:center;background-color:yellowgreen;color:orange">Student Details</h2>
<table border="1" align="center" class="table-condensed">
    <tr>
        <th>@Html.DisplayNameFor(S => S.Sid)</th>
        <th>@Html.DisplayNameFor(S => S.Name)</th>
        <th>@Html.DisplayNameFor(S => S.Class)</th>
        <th>@Html.DisplayNameFor(S => S.Fees)</th>
        <th>@Html.DisplayNameFor(S => S.Photo)</th>
        <th align="center"> Action</th>

    </tr>
    @foreach (MVCWithADO.Models.Student studentitem in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(s => studentitem.Sid)
            </td>
            <td>
                @Html.DisplayFor(s => studentitem.Name)
            </td>
            <td>
                @Html.DisplayFor(s => studentitem.Class)
            </td>
            <td>
                @Html.DisplayFor(s => studentitem.Fees)
            </td>
            <td>
                <img src="~/Upload/@studentitem.Photo" alt="No Image" width="40" height="25" />
            </td>
            <td>
                @Html.ActionLink("Details","DisplayStudent",new { Sid = studentitem.Sid })
                @Html.ActionLink("Edit", "EditStudent",new { Sid = studentitem.Sid })
                @Html.ActionLink("Delete", "DeleteStudent", new {Sid=studentitem.Sid,onclick= "return confirm('Are you sure of deleting the record?')" })
            </td>
        </tr>
    }
    <td colspan="6" align="center">
        @Html.ActionLink("Add New Student", "AddStudent")
    </td>
 </table>


