@model MVCWithADO.Models.Student

@{
    ViewBag.Title = "UpdateStudent";
}

<h2 style="text-align:center;background-color:yellowgreen;color:orangered">Edit Student Details</h2>
@using (Html.BeginForm("EditStudent", "Student", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div>@Html.DisplayFor(s => s.Sid) <br /> @Html.TextBoxFor(s => s.Sid, new { @readonly = "true" })</div>
    <div>@Html.LabelFor(S => S.Name)<br />@Html.TextBoxFor(S => S.Name)</div>
    <div>@Html.LabelFor(S => S.Class)<br />@Html.TextBoxFor(S => S.Class)</div>
    <div>@Html.LabelFor(S => S.Fees)<br />@Html.TextBoxFor(S => S.Fees)</div>
    <div>
        @Html.LabelFor(S => S.Photo)<br />
        <img src="~/Upload/@Model.Photo" width="100" height="100" alt="No Image" style="border:dashed red" />
        <input type="file" name="selectedFile" />
    </div>
    <div>
        <input type="submit" name="btnUpdate" value="Update" />@Html.ActionLink("Cancel","DisplayStudent")
    </div>

        }


